<section class="signin-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="block text-center">
          <a class="logo" href="index.html">
            <!-- <img src="images/logo.png" alt=""> -->
          </a>
          <h2 class="text-center">Welcome Back</h2>


          <%= form_for(resource, as: resource_name, :class => "text-left clearfix", url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Log in", :class => "btn btn-main text-center" %>
            </div>
          <% end %>

          <p class="mt-20">
            New in this site? <%= link_to " Create New Account", new_registration_path(resource_name) %>
            <p><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
          </p>

        </div>
      </div>
    </div>
  </div>
</section>
