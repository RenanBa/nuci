<section class="forget-password-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="block text-center">
          <h2 class="text-center">Welcome Back</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <p>Please enter the email address for your account. A verification code will be sent to you. Once you have received the verification code, you will be able to choose a new password for your account.</p>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "form-control" %>
            </div>

            <div class="text-center">
              <%= f.submit "Reset password", :class => "btn btn-main text-center" %>
            </div>
          <% end %>

          <p class="mt-20">
            New in this site? <%= link_to " Create New Account", new_registration_path(resource_name) %> </br>
            Already have an account? <%= link_to " Log in", new_session_path(resource_name) %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
